package ActionListeners;

import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class ShowRoomTypes extends JPanel {
	
	// Define panels
	JPanel midPanel = new JPanel();
	JPanel dounPanel = new JPanel();
	
	// Define labels
	JLabel nameLabel = new JLabel("Наименование");
	JLabel priceLabel = new JLabel("Цена за нощувка");
	
	// Define text fields
	JTextField nameTF = new JTextField();
	JTextField priceTF = new JTextField();

	// Define buttons
	JButton addBt=new JButton("Добавяне");
	JButton deleteBt=new JButton("Изтриване");
	JButton editBt=new JButton("Промяна");
	JButton searchBt=new JButton("Търсене по име");
	JButton refreshBt=new JButton("Обнови");
		
	public ShowRoomTypes(JPanel panel) {
		this.setLayout(new GridLayout(6,2));
		
		this.add(nameLabel);
		this.add(nameTF);
		this.add(priceLabel);
		this.add(priceTF);
		
		midPanel.setLayout(new FlowLayout());
		midPanel.add(addBt);
		midPanel.add(deleteBt);
		midPanel.add(editBt);
		midPanel.add(searchBt);
		midPanel.add(refreshBt);
		
		panel.add(midPanel);
		
	}
		
}
