package ActionListeners;

import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class ShowRoomTypes implements ActionListener {
	
	// Define panels
	JPanel upPanel = new JPanel();
	JPanel midPanel = new JPanel();
	JPanel dounPanel = new JPanel();
	
	// Define labels
	JLabel nameLabel = new JLabel("Наименование");
	JLabel priceLabel = new JLabel("Цена за нощувка");
	
	// Define text fields
	JTextField nameTF = new JTextField();
	JTextField priceTF = new JTextField();

	@Override
	public void actionPerformed(ActionEvent e) {
		
		upPanel.setLayout(new GridLayout(3, 1));
		
		upPanel.add(nameLabel);
		upPanel.add(nameTF);
		upPanel.add(priceLabel);
		upPanel.add(priceTF);
		
		
	}
}
